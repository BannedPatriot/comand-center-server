            "name": "Change Lights",
            "events": [
                {
                    "endpoint_id": "pp7_imac",
                    "event_id": "stage-display-changed",
                    "logic": [
                        {
                            "function": "for_hashtags",
                            "variable": "current_slide_notes",
                            "logic": [
                                {
                                    "function": "if_hash",
                                    "operator": "starts_with",
                                    "value": "#lights",
                                    "logic": [
                                        {
                                            "function": "trigger",
                                            "id": "onyx",
                                            "trigger": "change_scene",
                                            "vars": [
                                                {
                                                    "name": "Lighting Scene",
                                                    "id": "lighting-scene",
                                                    "type": "String",
                                                    "value": "%current_slide_notes.replace('#lights-','')%"

                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]

                        }

                    ]

                }
            ]
        },
